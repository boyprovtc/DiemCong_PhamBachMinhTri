@model IEnumerable<DiemCong_PhamBachMinhTri.Models.SinhVien>

@{
    ViewBag.Title = "ListSV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListSV</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ma SV
        </th>
        <th>
            Ho Ten
        </th>
        <th>
           Gioi Tinh
        </th>
        <th>
           Ngay Sinh
        </th>
        <th>
            Hinh
        </th>
        <th>
           Ma Nganh
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        @Html.DisplayFor(modelItem => item.MaSV)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgaySinh)
    </td>
    <td><img src="@item.Hinh" alt="hinh thumbnail" width="100px" /></td>
    <td>
        @Html.DisplayFor(modelItem => item.MaNganh)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
        @Html.ActionLink("Details", "Detail", new { id = item.MaSV }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
    </td>
</tr>
}

</table>
